@model LKBHistorial.Models.PerroSocio

@{
    ViewData["Title"]="Asignaci√≥n de socios";
}

<body style="background: linear-gradient(to bottom, #afd275 2%, #ffffff 99%);">
    <h2>Asignacion de Socio/a con perro</h2>
     <div class="row">
        <div class="col-md-6">
            <form asp-action="AsignarPerroSocio" asp-controller="Socio">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Socio</label>
                    <select asp-for="IdSocio" asp-items="ViewBag.Socios" class="form-control"></select>
                </div>
                
                <div class="form-group">
                    <label>Perro para asignar</label>
                     <select asp-for="IdPerro" asp-items="ViewBag.PerrosAsociar" class="form-control"></select>
                </div>
                <div class="form-group">
                    
                </div>
                <div class="form-group">
                    <input type="submit" value="Asignar socio con perro" class="btn btn-primary">
                </div>
            </form>

        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <a asp-action="Asignaciones" asp-controller="Socio" class="btn btn-info">Lista de asignaciones</a>
        </div>
        <div class="col-md-2">
            <a asp-action="ListaSocios" asp-controller="Socio" class="btn btn-dark">Regresar</a>
        </div>

    </div>


</body>


