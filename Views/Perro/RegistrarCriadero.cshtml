    <body>
      
        <div class="row">
            <div class="col-md-4"> 
                <form asp-action="RegistrarCriadero" asp-controller="Perro" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                     <div class="form-group">
                         <label>Nombre de criadero</label>
                        <input type="text" asp-for="Nombre" class="form-control">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    
                    </div>
                     <div class="form-group">
                        <label>Departamento de criadero</label>
                        <input type="text" asp-for="Departamento" class="form-control">
                        <span asp-validation-for="Departamento" class="text-danger"></span>

                    </div>
                     <div class="form-group">
                         <label>Distrito de criadero</label>
                        <input type="text" asp-for="Distrito" class="form-control">
                        <span asp-validation-for="Distrito" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label>Calle de criadero</label>
                        <input type="text" asp-for="Calle" class="form-control">
                        <span asp-validation-for="Calle" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                      <input type="submit" id="boton" value="Registrar Criadero" class="btn btn-primary">                   
                    </div>

                </form>
                
            </div>   

        </div>
        <div class="row">
            <div class="col-md-2">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Regresar</a>
                
            </div>
        </div>
      


