@model LKBHistorial.Models.Perro

@{
    ViewData["Title"]="Registrar Perro";
}


<html>

    <script type="text/javascript">
        function confirmar(){
            
        }

    </script>
    <head>
    

    </head>

    <body>
        <h2>
            Registrar Perro
        </h2>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="RegistrarPerro" asp-controller="Perro" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="form-group">
                        <select asp-for="Madurez">
                            <option value="Cachorro">Cachorro</option>
                            <option value="Adulto">Adulto</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Microchip</label>
                        <input type="text" asp-for="Id" class="form-control">
                        <span asp-asp-validation-for="Id" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Nombre de perro</label>
                        <!--pon aqui un input, defines que tipo de input es, 
                         pones el asp-for para enlazarlo con un atributo, y le asignas una clase
                         -->
                       <input type="text" asp-for="Nombre" class="form-control">
                       <!--Esto se usa para mostrar algun mensaje de error
                        -->
                       <span asp-asp-validation-for="Nombre"></span>

                    <div class="form-group">
                        <label>Nombre del criador (Original)</label>
                        <select asp-items="ViewBag.Criadores" asp-for="IdCriadorOriginal"></select>
                         
                   
                    </div>
                     <div class="form-group">
                        <label>Nombre del criador (Actual)</label>
                         <select asp-items="ViewBag.Criadores" asp-for="IdCriadorActual"></select>
                   
                    </div>
                     <div class="form-group">
                        <label>Nombre del criadero</label>
                          <select asp-items="ViewBag.Criaderos" asp-for="IdCriadero"></select>
                   
                    </div>
                     <div class="form-group">
                        <label>Raza</label>
                         <select asp-items="ViewBag.Razas" asp-for="IdRaza"></select>
                   
                    </div>

                    <div class="form-group">
                        <select asp-for="Sexo">
                            <option value="M">Macho</option>
                             <option value="H">Hembra</option>
                        </select>
                        
                    </div>

                    <div class="form-group">
                        <label>Fecha de Nacimiento</label>
                        <input type="date" asp-for="FechaNacimiento" class="form-control">
                       
                    </div>

                
                    </div>

                     <div class="form-group">
                        <label>Padre</label>
                         <select asp-items="ViewBag.Machos" asp-for="IdPadre"></select>
                   
                    </div>
                    <div class="form-group">
                        <label>Madre</label>
                         <select asp-items="ViewBag.Hembras" asp-for="IdMadre"></select>
                   
                    </div>

                    <div class="form-group">
                        <label>Temperamento</label>
                        <select asp-for="Temperamento">
                            <option value="Docil"></option>
                            <option value="Relajado"></option>
                            <option value="Moderado"></option>
                            <option value="Agresivo"></option>
                            <option value=""></option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label>Estatura</label>
                        <select asp-items="ViewBag.Estaturas" asp-for="IdEstatura"></select>
                    </div>

                     <div class="form-group">
                        <input type="submit" value="Registrar Perro" class="btn btn-default">
                    </div>

                </form>


            </div>


        </div>

         <form asp-action="Index" asp-controller="Home" >
            <input type="button" value="Regresar" class="btn btn-secondary">
        </form>
       
    </body>




</html>



