        <div class="row" style="color: #fff;font-weight:bold ; font-size:19px; ">
            <div class="col-md-4"> 
                <form asp-action="RegistrarCriador" asp-controller="Perro" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   
                     <div class="form-group">
                         <label>Nombre de criador</label>
                        <input type="text" asp-for="Nombre" class="form-control">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    
                    </div>
                     <div class="form-group">
                        <label>Apellido Paterno</label>
                        <input type="text" asp-for="ApellidoPaterno" class="form-control">
                        <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>

                    </div>
                     <div class="form-group">
                         <label>Apellido Materno</label>
                        <input type="text" asp-for="ApellidoMaterno" class="form-control">
                        <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label>Telefono</label>
                        <input type="number" asp-for="Telefono" class="form-control">
                        <span asp-validation-for="Telefono" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label>Criadero</label>
                        <select asp-items="ViewBag.Criaderos" asp-for="IdCriadero" class="form-control"></select>
                      
                    </div>
                    <div class="form-group">
                      <input type="submit" id="Boton" value="Registrar Criador" class="btn btn-success">                   
                    </div>

                </form>
                
            </div>   

        </div>
        


