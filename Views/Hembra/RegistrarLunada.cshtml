<body  style="background-image: url(https://deanimalesdomesticos.com/wp-content/uploads/2018/08/American-bully-XL.jpg">
    <h2 style="color: #fff;">REGISTAR LUNADA</h2>
    <hr />

    <div class="row" style="color: #fff;font-weight:bold ; font-size:19px; ">
        <div class="col-md-5">
            <form asp-action="RegistrarLunada" asp-controller="Hembra">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group">
                    <label>Selecciona hembra:</label>
                    <select asp-items="ViewBag.Hembras" asp-for="IdPerro" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label>Fecha de inicio</label>
                    <input type="date" asp-for="FechaInicio" class="form-control">
                </div>
                <div class="form-group">
                    <label>Fecha final</label>
                    <input type="date" asp-for="FechaFin" class="form-control">
                </div>
                <div class="form-group">
                    <label>Numero de celos (sin contar actual)</label>
                    <input type="number" asp-for="NumeroCelos" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar Lunada" class="btn btn-success" id="boton">
                </div>
            </form>
        </div>
    </div>
     <div class="row">
        <div class="col-md-3">
            <a asp-action="ListaLunada" asp-controller="Hembra" class="btn btn-info">Lista de Lunadas</a>
        </div>
    </div>

</body>